# Databricks MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Databricks workspace hostname (without https://)
# Example: your-workspace.cloud.databricks.com
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com

# Required: SQL warehouse HTTP path
# Example: /sql/1.0/warehouses/abc123def456789
# You can find this in your Databricks SQL warehouse connection details
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Required: Personal access token for authentication
# Generate this in Databricks under User Settings > Access Tokens
DATABRICKS_ACCESS_TOKEN=your-personal-access-token

# Optional: Default catalog to use (defaults to 'hive_metastore')
DATABRICKS_CATALOG=hive_metastore

# Optional: Default schema to use (defaults to 'default')
DATABRICKS_SCHEMA=default

# Optional: Python settings for better container behavior
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1